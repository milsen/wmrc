# launch a menu
super + d
        dmenu_run -b -fn candy -nb black -nf darkgrey -sf black -sb darkgrey

# pop a term
super + Return
        tln

# move windows
super + {Left,Down,Up,Right}
        wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# resize windows
super + alt + {Left,Down,Up,Right}
        wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# switch between windows quickly
super + Tab
        wfw next

# kill sxhkd (for config changes, must be manually reopened)
super + Escape
        killall sxhkd

# toggle groups
super + {1,2,3,4,5}
        mgfw -t {1,2,3,4,5}

# assign window to group
super + shift + {1,2,3,4,5}
        mgfw -d all; \
        mgfw -a {1,2,3,4,5}

# remove window from group
super + shift + Return
        mgfw -d all

# close window
super + shift + e
        kwdw

# fullscreens window
super + f
        fls $(pfw)

# focuses the closest window
super + {h,j,k,l}
        cls {left,down,up,right}

# puts window in a corner
super + shift + {q,w,a,s}
        crnr {tl,tr,bl,br}

# centers window
super + shift + space
        cw $(pfw)

# snaps a window
super + shift + {Left,Right,Up,Down}
        snp {left,right,up,down}
